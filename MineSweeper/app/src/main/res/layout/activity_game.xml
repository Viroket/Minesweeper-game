<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.tal.minesweeper.GameActivity"
    android:weightSum="1"
    android:background="@drawable/emptyboardyellowup"
    android:gravity="end">



    <GridView
        android:layout_width="wrap_content"
        android:layout_height="409dp"
        android:id = "@+id/gridview"
        android:columnWidth="90dp"
        android:numColumns="3"
        android:verticalSpacing="1dp"
        android:horizontalSpacing="1dp"
        android:stretchMode="columnWidth"
        android:outlineProvider="bounds"
        android:gravity="center"
        android:layout_below="@+id/switchFlags"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:paddingTop="20dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loseSprite"
        android:layout_centerInParent="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Timer"
        android:textSize="20dp"
        android:layout_weight="0.14"
        android:layout_marginEnd="10dp"
        android:layout_alignBottom="@+id/switchFlags"
        android:layout_alignParentEnd="true" />

    <TextView
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flagsNumber"
        android:layout_weight="0.14"
        android:layout_marginStart="34dp"
        android:layout_alignBottom="@+id/switchFlags"
        android:layout_alignParentStart="true" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/switchFlags"

        android:layout_weight="0.33"
        android:layout_marginTop="21dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
